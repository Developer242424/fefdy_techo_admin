<div class="modal" id="subject_edit_modal">
    <div class="modal-header">
        <h3>Edit Modal</h3>
        <button type="button" class="close">
            <svg width="34" height="34" viewBox="0 0 34 34" fill="none" xmlns="http://www.w3.org/2000/svg">
                <g clip-path="url(#clip0_7_7)">
                    <path d="M25.5 8.5L8.5 25.5" stroke="#DADADA" stroke-width="2.125" stroke-linecap="round"
                        stroke-linejoin="round" />
                    <path d="M9 9L26 26" stroke="#DADADA" stroke-width="2.125" stroke-linecap="round"
                        stroke-linejoin="round" />
                </g>
                <defs>
                    <clipPath id="clip0_7_7">
                        <rect width="34" height="34" fill="white" />
                    </clipPath>
                </defs>
            </svg>
        </button>
    </div>

    <form id="subject_edit_form" class="modal-body" method="post" enctype="multipart/form-data">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="edit_subject">Subject</label>
                        <input type="text" class="form-control" name="edit_subject" id="edit_subject">
                        <p class="validate_error text-danger" id="edit_subject_error"></p>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="edit_thumbnail">Thumbnail</label>
                        <input type="file" accept=".jpg,.jpeg,.png,.webp" class="form-control" name="edit_thumbnail"
                            id="edit_thumbnail">
                        <p class="validate_error text-danger" id="edit_thumbnail_error"></p>
                        <span><a href="" target="_blank" id="thumbnail_link">View File...</a></span>
                        <input type="hidden" name="edit_id" id="edit_id">
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="edit_background">Background Image</label>
                        <input type="file" accept=".jpg,.jpeg,.png,.webp," class="form-control" name="edit_background"
                            id="edit_background">
                        <p class="validate_error text-danger" id="edit_background_error"></p>
                        <span><a href="" target="_blank" id="background_link">View File...</a></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="options">
                <button class="cancel" type="button">Cancel</button>
                <button class="submit form-submit-button" id="subject_edit_btn" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>