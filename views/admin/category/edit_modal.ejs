<div class="modal" id="category_edit_modal">
    <div class="modal-header">
        <h3>Edit category</h3>
        <button type="button" class="close">
            <svg width="34" height="34" viewBox="0 0 34 34" fill="none" xmlns="http://www.w3.org/2000/svg">
                <g clip-path="url(#clip0_7_7)">
                    <path d="M25.5 8.5L8.5 25.5" stroke="#DADADA" stroke-width="2.125" stroke-linecap="round"
                        stroke-linejoin="round" />
                    <path d="M9 9L26 26" stroke="#DADADA" stroke-width="2.125" stroke-linecap="round"
                        stroke-linejoin="round" />
                </g>
                <defs>
                    <clipPath id="clip0_7_7">
                        <rect width="34" height="34" fill="white" />
                    </clipPath>
                </defs>
            </svg>
        </button>
    </div>

    <form id="category_edit_form" class="modal-body" method="post" enctype="multipart/form-data">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="edit_title">Category Name</label>
                        <input class="form-control" type="text" name="edit_title" id="edit_title">
                        <p class="validate_error text-danger" id="edit_title_error"></p>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="edit_type">Type</label>
                        <select name="edit_type" id="edit_type" class="form-control">
                            <option value="">Select Type</option>
                            <option value="PDF">PDF</option>
                            <option value="Video">Video</option>
                            <option value="Image">Image</option>
                        </select>
                        <p class="validate_error text-danger" id="edit_type_error"></p>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="edit_thumbnail">Thumbnail</label>
                        <input type="file" accept=".jpg,.jpeg,.png,.webp,.gif" class="form-control" name="edit_thumbnail"
                            id="edit_thumbnail">
                        <a target="_blank">View File...</a>
                        <p class="validate_error text-danger" id="edit_thumbnail_error"></p>
                        <input type="hidden" name="edit_id" id="edit_id">
                    </div>
                </div>
            </div>

            <div class="row">


            </div>
        </div>

        <div class="modal-footer">
            <div class="options">
                <button class="cancel" type="button">Cancel</button>
                <button class="submit form-submit-button" id="category_edit_btn" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>