<div class="modal modal-extra-large" id="subtopic_edit_modal">
    <div class="modal-header">
        <h3>Add sub Topic</h3>
        <button type="button" class="close">
            <svg width="34" height="34" viewBox="0 0 34 34" fill="none" xmlns="http://www.w3.org/2000/svg">
                <g clip-path="url(#clip0_7_7)">
                    <path d="M25.5 8.5L8.5 25.5" stroke="#DADADA" stroke-width="2.125" stroke-linecap="round"
                        stroke-linejoin="round" />
                    <path d="M9 9L26 26" stroke="#DADADA" stroke-width="2.125" stroke-linecap="round"
                        stroke-linejoin="round" />
                </g>
                <defs>
                    <clipPath id="clip0_7_7">
                        <rect width="34" height="34" fill="white" />
                    </clipPath>
                </defs>
            </svg>
        </button>
    </div>
    <form id="subtopic_edit_form" class="modal-body" method="post" enctype="multipart/form-data">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="edit_subject">Subject</label>
                        <select name="edit_subject" id="edit_subject" class="form-control">
                            <option value="">Select Subject</option>

                        </select>
                        <p class="validate_error text-danger" id="edit_subject_error"></p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="edit_topic">Topic</label>
                        <select name="edit_topic" id="edit_topic" class="form-control">
                            <option value="">Select Topic</option>

                        </select>
                        <p class="validate_error text-danger" id="edit_topic_error"></p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="edit_level">Level</label>
                        <select name="edit_level" id="edit_level" class="form-control">
                            <option value="">Select Level</option>
                        </select>
                        <p class="validate_error text-danger" id="edit_level_error"></p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="edit_thumbnail">Thumbnail</label>
                        <input type="file" accept=".jpg,.jpeg,.png,.webp" class="form-control" name="edit_thumbnail"
                            id="edit_thumbnail">
                        <p class="validate_error text-danger" id="edit_thumbnail_error"></p>
                        <span><a href="" target="_blank" id="thumbnail_link">View File...</a></span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="edit_title">Title</label>
                        <input class="form-control" type="text" name="edit_title" id="edit_title"
                            placeholder="Type a brief title...">
                        <p class="validate_error text-danger" id="edit_title_error"></p>
                    </div>
                </div>
                <div class="col-sm-4">

                    <div class="form-group">
                        <label for="edit_category">Category <span style="color: #f70909;font-size: 13px;">( Removed
                                category data won't come back if reselected. )</span></label>
                        <select name="edit_category[]" id="edit_category" class="form-control" multiple>
                            <option value="">Select Category</option>
                            <% category.forEach( (value)=> { %>
                                <option value="<%= value.id %>">
                                    <%= value.title %>
                                </option>
                                <% }) %>
                        </select>
                        <p class="validate_error text-danger" id="edit_category_error"></p>
                    </div>


                </div>
            </div>

            <div class="row edit_categories_div">
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="edit_sort_order">Sort Order</label>
                        <input class="form-control" type="number" name="edit_sort_order" id="edit_sort_order">
                        <p class="validate_error text-danger" id="edit_sort_order_error"></p>
                    </div>
                </div>
            </div>

            <!-- Image Input -->


            <div class="row">
                <div class="form-group">
                    <label for="edit_description">Description</label>
                    <textarea class="form-control" rows="4" name="edit_description" id="edit_description"
                        placeholder="Type a brief description..."></textarea>
                    <p class="validate_error text-danger" id="edit_description_error"></p>
                    <input type="hidden" name="edit_id" id="edit_id">
                </div>
            </div>


            <!-- PDF Input -->



        </div>
        <div class="modal-footer">
            <div class="options">
                <button class="cancel" type="button">Cancel</button>
                <button class="submit form-submit-button" id="subtopic_edit_btn" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>